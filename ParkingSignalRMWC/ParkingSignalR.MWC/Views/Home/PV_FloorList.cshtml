@model IEnumerable<ParkingSignalR.MWC.Models.Slots>
<h3>    FLOOR - 1</h3>
<div class="row col-md-12">

    @foreach (var item in Model.Where(x => x.FloorId == 1))
    {

        <div class="col-md-1" style="background-color: @(item.Status == false ? "darkseagreen" : "red"); border: 1px dotted; margin: 5px; border-radius: 3px; height: 200px; text-align: center;" onclick="setChangeStatus(@item.Id, '@item.Status.ToString()')">
            @if (item.SlotTypeId == 5)
            {
                <img src="~/Content/img/engelli.png" width="80px" height="80px" />
            }
            @if (item.SlotTypeId == 4)
            {
                <img src="~/Content/img/hamile.png" width="80px" height="80px" />
            }
            @if (item.SlotTypeId == 3)
            {
                <img src="~/Content/img/elektrikli.png" width="80px" height="80px" />
            }
            @if (item.SlotTypeId == 2)
            {
                <img src="~/Content/img/panelvan.png" width="80px" height="80px" />
            }
            @if (item.SlotTypeId == 1)
            {
                <img src="~/Content/img/sedan.png" width="80px" height="80px" />
            }
            <br /><br />
            <h4>@item.Name</h4>
        </div>

    }
</div>
